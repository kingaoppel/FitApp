<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="inputLayer" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="backgroundTint">@color/white</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/boxCornerRadius_12dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/boxCornerRadius_12dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/boxCornerRadius_12dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/boxCornerRadius_12dp</item>
        <item name="endIconTint">@color/primary</item>
        <item name="boxStrokeColor">@color/text_input_stroke_color</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="inputLayer.Email">
        <item name="startIconDrawable">@drawable/ic_email</item>
        <item name="startIconTint">@color/primary</item>
        <item name="endIconMode">clear_text</item>

    </style>

    <style name="inputLayer.Password">
        <item name="startIconDrawable">@drawable/ic_lock</item>
        <item name="startIconTint">@color/primary</item>
        <item name="endIconMode">password_toggle</item>
    </style>
    
    <style name="baseText">
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:fontStyle">italic</item>


    </style>

    <style name="button">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/grey</item>
        <item name="strokeWidth">@dimen/dp_2</item>

        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:includeFontPadding">false</item>

        <item name="textAllCaps">false</item>
    </style>

</resources>